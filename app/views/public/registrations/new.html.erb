<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h4>新規会員登録</h4>
    </div>
  </div>

  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <p>名前</p>
    </div>
    <div class="field">
      (姓) <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    </div>
    <div class="field">
      (名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <p>フリガナ</p>
    </div>
    <div class="field">
      (セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    </div>
    <div class="field">
      (メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <p>メールアドレス</p>
    </div>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <p>郵便番号(ハイフンなし)</p>
    </div>
    <div class="field">
      <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <p>住所</p>
    </div>
    <div class="field">
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <p>電話番号(ハイフンなし)</p>
    </div>
    <div class="field">
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <p>パスワード(6文字以上)</p>
    </div>
    <div class="field">
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <p>パスワード(確認用)</p>
    </div>
    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3"></div>
    <div class="action">
      <%= f.submit "新規登録", class: 'btn btn-success' %>
    </div>
  </div>
<% end %>






