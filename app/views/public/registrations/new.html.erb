<h4>新規会員登録</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "public/shared/error_messages", resource: resource %>

<table>
  <tr>
    <td>名前</td>
    <td>
      <div class="field">
      (姓)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>
    </td>
    <td>
      <div class="field">
      (名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>
    </td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td>
      <div class="field">
      (セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      </div>
    </td>
    <td>
      <div class="field">
      (メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div>
    </td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td>
      <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </td>
  </tr>
  <tr>
    <td>郵便番号(ハイフンなし)</td>
    <td>
      <div class="field">
      <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
      </div>
    </td>
  </tr>
  <tr>
    <td>住所</td>
    <td>
      <div class="field">
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>
    </td>
  </tr>
  <tr>
    <td>電話番号(ハイフンなし)</td>
    <td>
      <div class="field">
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
      </div>
    </td>
  <tr>
    <td>パスワード(6文字以上)</td>
    <td>
      <div class="field">
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </td>
  </tr>
  <tr>
    <td>パスワード(確認用)</td>
    <td>
      <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </td>
  </tr>
</table>
<div class="actions">
<%= f.submit "新規登録", class: 'btn btn-success' %>
</div>
<% end %>

<div>
  <h4>既に登録済みの方</h4>
  <%= link_to "こちら",  new_customer_session_path %>からログインしてください。
