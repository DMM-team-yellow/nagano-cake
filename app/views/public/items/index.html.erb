<div class='container'>
  <div class="row mt-5">

    <div class="col-lg-2">
      <%= render 'genre_search', genres: @genres  %>
    </div>

    <div class="col-lg-8 offset-lg-1">
      <h3>商品一覧<small>（全 <%= @item.count %> 件）</h3>
       <div class="row">
        <% @items.each do |item| %>
          <div class="col-lg-3">
            <%= link_to item_path(item.id), class: "text-dark" do %>
              <p><%= image_tag item.image, size: "130x100" %></p>
              <p><%= item.name %></p>
              <p>¥<%= (item.price*1.08).floor %></p>
            <% end %>
          </div>
          <% end %>
       </div>
       <div class="pagination justify-content-center mt-5">
         <%= paginate @items %>
       </div>
       
    </div>
    
  </div>
</div>