<div class = "container">
  <div class = "row mt-3">
<h4>注文情報入力</h4>
</div>
  <%=form_with model: @order, url: "/orders/confirm", method: :post do |f| %>
    <h5><strong>支払方法</strong></h5>
      <p>
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
      <br>
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>
      </p>
  <% end %>
  <%= form_with model: @order, url: "/orders/confirm", method: :post do |f| %>
    <h5><strong>お届け先</strong></h5>
      <p>
        <%= f.radio_button :address_option, 0, checked: "checked" %>
        <%= f.label :order_address, "ご自身の住所" %>
      <br>
        〒<%= current_customer.postcode %>
          <%= current_customer.address %>
      <br>
          <%= current_customer.last_name %><%= current_customer.first_name %>
      </p>
      <p>
        <%= f.radio_button :address_option, 1 %>
        <%= f.label :order_address, "登録済住所から選択" %>
      <br>
        <%= f.select :order_address, options_from_collection_for_select(Address.all, :id, :full_address) %>
      </p>
      <p>
        <%= f.radio_button :address_option, 2 %>
        <%= f.label :order_address, "新しいお届け先" %>
      </p>
      <div class = "row">
        <label for = "ship_postcode" class = "col-lg-3 form-label">郵便番号（ハイフンなし）</label>
        <div class = "col-lg-2">
          <input type ="text" class = "form-control" placeholder = "00000000">
        </div>
      </div>
      <div class = "row">
        <label for = "ship_name" class = "col-lg-3 form-label">宛名</label>
        <div class = "col-lg-4 mt-2">
          <input type ="text" class = "form-control" placeholder = "東京都渋谷区代々木神園町0-0">
        </div>
      </div>
      <div class = "row">
        <label for = "ship_adrress" class = "col-lg-3 form-label">住所</label>
        <div class = "col-lg-2 mt-2">
          <input type = "text" class = "form-control" placeholder = "山田太郎">
        </div>
      </div>
      <div class = "row mx-auto">
        <div class = "col-lg-6 offset-lg-5 mt-5">
          <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>
</div>