<h2>ショッピングカート</h2>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= (cart_item.item.price*1.08).to_i %></td>
        <td><%= cart_item.quantity %></td>
        <td>
          <% subtotal = ((cart_item.item.price*cart_item.quantity)*1.08).to_i %><!--小計の計算-->
          <%= subtotal %> <!--小計を表示-->
        </td>
        <td><%= link_to '削除する',public_cart_item(cart_item) %></td>
      </tr>
  </tbody>
</table>