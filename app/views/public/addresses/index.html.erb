<div class="container">
  <div class="row">
    <div class="col-4">
      <div style="padding:20px 0px 20px 100px;">
        <h5 class="m-3" style="background-color: #ccc;" align="center">配送先登録 / 一覧</h5>
      </div>
    </div>
  </div>

<% if @address.errors.any? %>
  <%= @address.errors.count %>件のエラーが発生しました
  <ul>
    <% @address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <div style="padding:0px 0px 30px 20px;">
    <%= form_with model: @address, url: addresses_path do |f| %>
<div class="row">
  <div class="col-3">
    <%= f.label :postcode, "郵便番号(ハイフンなし)" %>
  </div>
  <div class="col-3">
    <%= f.text_field :postcode, placeholder: "0000000" %>
  </div>
</div>
<div class="row">
  <div class="col-3">
    <%= f.label :address, "住所" %>
  </div>
  <div class="col-3">
    <%= f.text_field :address, size: 40, placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>
</div>
<div class="row">
  <div class="col-3">
    <%= f.label :name, "宛名" %>
  </div>
  <div class="col-3">
    <%= f.text_field :name, placeholder: "令和道子" %>
</div>
  <div class="col-3" style="padding-left:140px;">
    <%= f.submit "新規登録", class: "btn btn-success btn-sm" %>
  </div>
</div>
<% end %>
</div>
</div>
<div class="container">
  <div class="row">
    <div class="col-9">
<table class="table table-bordered">
  <thead>
    <tr>
      <th class="table-secondary">郵便番号</th>
      <th class="table-secondary">住所</th>
      <th class="table-secondary">宛名</th>
      <th class="table-secondary"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postcode %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
      <%= link_to "編集する", edit_address_path(address), class: "btn btn-success btn-sm" %>
      <%= link_to "削除する", address_path(address), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger btn-sm" %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
    </div>
  </div>
</div>
