<div class='container'>
  <div class='row'>
    <div class="col-md-3">
      <h4 class="m-5" style="background-color: #ccc;" align="center">会員情報編集</h4>
    </div>
  </div>

  <%= form_with model:@customer, local:true do |f| %>
  <%= render "public/shared/error_messages", resource: @customer %>
  <div class="form-group row">
    <div class="col-sm-3">
      <label>氏名</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :last_name %>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :first_name %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <label>フリガナ</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :last_name_kana %>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :first_name_kana %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <label>郵便番号</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :postcode %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <label>住所</label>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :address, style: "width:80%" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <label>電話番号</label>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :telephone_number %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3">
      <label>メールアドレス</label>
    </div>
    <div class="col-sm-4">
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2 m-3">
      <%= f.submit "編集内容を保存", class: 'btn btn-sm btn-block btn-success' %>
    </div>
    <% end %>
    <div class="col-sm-2 offset-2">
      <%= link_to "退会する", unsubscribe_path(@customer), class: "btn btn-sm btn-block btn-danger" %>
    </div>
  </div>
</div>