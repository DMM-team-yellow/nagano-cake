<div class='col-md-8 offset-md-1'>
  <h4>会員情報編集</h4>

    <%= form_with model:@customer,local:true do |f| %>
    <table>
      <tr>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= f.text_field :last_name %></td>
        <td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.text_field :last_name_kana %></td>
        <td><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :postcode %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.email_field :email %></td>
      </tr>
    </table>
  <% end %>

  <%= link_to '編集内容を保存', customer_path(@customer), class: "btn btn-sm btn-success" %>
  <%= link_to "退会する", customer_path(@customer), class: "btn btn-sm btn-danger" %>
</div>
