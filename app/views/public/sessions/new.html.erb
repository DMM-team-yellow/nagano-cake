<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <h4 class="m-3" style="background-color: #ccc;" align="center">ログイン</h4>
    </div>
  </div>

<%= render "public/shared/error_messages", resource: resource %>


  <div class="row">
    <div class="col-lg-4">
      <h5 class="m-3" style="background-color: #ccc;" align="center">会員の方はこちらからログイン</h5>
    </div>
  </div>

  <div class="form-horizontal" role="form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group row mt-5">
        <label class="col-sm-2 col-form-label">メールアドレス</label>
        <div class="col-sm-8 control-label">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width:40%", class:'control-label', placeholder: "sample@example.com" %>
        </div>
      </div>

      <div class="form-group row mb-4">
        <label class="col-sm-2 col-form-label">パスワード</label>
        <div class="col-sm-8 control-label">
          <%= f.password_field :password, autocomplete: "current-password", style: "width:40%", class:'control-label' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-3 offset-sm-2">
          <%= f.submit "ログイン", class: 'btn btn-sm btn-block btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-lg-4 mt-5">
      <h5 class="m-3" style="background-color: #ccc;" align="center">会員登録がお済みでない方</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 offset-sm-1">
        <%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。
    </div>
  </div>

<%= render "admin/shared/links" %>
</div>