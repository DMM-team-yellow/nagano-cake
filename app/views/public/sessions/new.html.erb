<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <h4 class="bg-secondary">ログイン</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <h5 class="bg-secondary">会員の方はこちらからログイン</h5>
    </div>
  </div>

  <div class="form-horizontal" role="form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group row">
        <label class="col-sm-2 col-form-label">メールアドレス</label>
        <div class="col-sm-8 control-label">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width:40%", class:'control-label', placeholder: "sample@example.com" %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-2 col-form-label">パスワード</label>
        <div class="col-sm-8 control-label">
          <%= f.password_field :password, autocomplete: "current-password", style: "width:40%", class:'control-label' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-sm btn-primary", style: "width:150%" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <h5 class="bg-secondary">会員登録がお済みでない方</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
        <%= link_to "こちら",   new_customer_registration_path %>から新規登録を行ってください。
    </div>
  </div>

<%= render "admin/shared/links" %>
</div>