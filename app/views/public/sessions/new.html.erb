<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h4>ログイン</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-5">
      <h5>会員の方はこちらからログイン</h5>
    </div>
  </div>

  <div class="row">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="col-sm-4">
      <p>メールアドレス</p>
    </div>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="row">
      <div class="col-sm-4">
        <p>パスワード</p>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

    <div class="row">
      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-sm btn-primary" %>
      </div>
        <% end %>
    </div>

    <div class="row">
      <div class="col-lg-5">
        <h5>会員登録がお済みでない方</h5>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
          <%= link_to "こちら",   new_customer_registration_path %>から新規登録を行ってください。
      </div>
    </div>

<%= render "admin/shared/links" %>