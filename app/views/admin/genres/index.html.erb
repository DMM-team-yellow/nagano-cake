<div class="container">
  <div class="row">
    <div class="col-4" style="padding:20px 0px 0px 100px;">
      <h5 class="m-3" style="background-color: #ccc;" align="center">ジャンル一覧・追加</h5>
    </div>
  </div>

<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
<div class="row">
  <div class="col-2" style="padding:30px 0px;">
    <%= f.label :name, "ジャンル名" %>
  </div>
  <div class="col-3" style="padding:30px 0px;">
    <%= f.text_field :name, placeholder: "ジャンル名" %>
  </div>
  <div class="col-3" style="padding:30px 0px;">
    <%= f.submit "新規登録", class: "btn btn-success btn-sm" %>
  </div>
</div>
<% end %>



<div class="row">
  <div class="col-4">
    <table class="table">
      <thead>
        <tr>
          <th class="table-secondary">ジャンル</th>
          <th class="table-secondary"></th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success btn-sm" %></td>
        </tr>
      </tbody>
        <% end %>
    </table>
  </div>
</div>
</div>