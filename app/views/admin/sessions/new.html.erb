<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4 class="m-3" style="background-color: #ccc;" align="center">管理者ログイン</h4>
    </div>
  </div>

  <div class="form-horizontal" role="form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group row mt-5 justify-content-center">
      <label class="col-sm-2 col-form-label">メールアドレス</label>
      <div class="col-sm-8 control-label">
         <%= f.email_field :email, autofocus: true, autocomplete: "email",style: "width:40%", class:'control-label', placeholder: "sample@example.com" %>
      </div>
    </div>

    <div class="form-group row mb-5 justify-content-center">
      <label class="col-sm-2 col-form-label">パスワード</label>
      <div class="col-sm-8 control-label">
         <%= f.password_field :password, autocomplete: "current-password",style: "width:40%", class:'control-label' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2 offset-sm-3 mb-4">
        <%= f.submit "ログイン", class: "btn btn-sm btn-block btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= render "admin/shared/links" %>