<div class='col-md-8 offset-md-1'>
   <% @customers.each do |customer| %>
    <h4>><%= customer.last_name %><%= customer.first_name %>さんの会員情報編集</h4>

    <table>
      <tr>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <tr>
        <td>会員ID</td>
        <td><%= customer.customer_id %></td>
        <% end %>
      </tr>
      <%= form_with model:@customer, local:true do |f| %>
      <tr>
        <td>氏名</td>
        <td><%= f.text_field :last_name %></td>
        <td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.text_field :last_name_kana %></td>
        <td><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :postcode %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.email_field :email %></td>
      </tr>
    </table>
    <%= f.submit "変更を保存", class: 'btn btn-success' %>
  <% end %>
</div>
