<div class="container">
  <div class="row">
    <h4 class="m-5 col-sm-3 offset-sm-2" style="background-color: #ccc;" align="center">
      <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
    </h4>
  </div>

  <table class='table table-hover table-inverse col-sm-5'>
    <tbody>
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postcode %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td>
          <% if @customer.is_deleted == true %>
          <p class="text-secondary">退会</p>
          <% else %>
          <p class="text-success">有効</p>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="row my-3 mx-3">
    <div class="col-sm-2 offset-sm-1">
      <%= link_to '編集する', edit_admin_customer_path(@customer), class: "btn btn-sm btn-block btn-success"%>
    </div>
    <div class="col-sm-2 offset-sm-1">
      <%= link_to '注文履歴一覧を見る', admin_path, class: "btn btn-sm btn-block btn-primary" %>
    </div>
  </div>
</div>