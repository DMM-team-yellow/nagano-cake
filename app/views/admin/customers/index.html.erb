<div class="container">
  <div class="row">
    <h4 class="m-5 col-sm-2 offset-sm-2" style="background-color: #ccc;" align="center">会員一覧</h4>
  </div>

  <table class='table table-hover table-inverse col-sm-8 offset-sm-2'>
    <thead class="table-light">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <% @customer.each_with_index do |customer, i| %>
    <tbody>
      <tr>
        <td><%= i+1 %></td>
        <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_deleted == true %>
          <p class="text-secondary">退会</p>
          <% else %>
          <p class="text-success">有効</p>
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <div class="pagination justify-content-center mt-2">
    <%= paginate @customer %>
  </div>
</div>