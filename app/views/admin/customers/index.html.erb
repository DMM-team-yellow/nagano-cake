<h4>会員一覧</h4>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customer.each_with_index do |customer, i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= link_to customer.last_name, admin_customer_path(customer.id) %></td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_deleted == true %>
          <p class="text-secondary">退会</p>
          <% else %>
          <p class="text-success">有効</p>
          <% end %>
        </td>
      </tr>
    <% end %>
    <%= paginate @customer %>
  </tbody>
</table>
