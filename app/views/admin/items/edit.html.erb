<div class='container'>

  <div class="row">
    <div>
      <h2>商品編集</h2>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto">
      
      <%= form_with(model: [ :admin, @item ]) do |f| %>
        <div class="form-group">
          <%= f.label :商品画像 %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :商品名 %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :商品説明 %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.label :ジャンル %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %>
        </div>
        <div class="form-group">
          <%= f.label :税抜価格 %>
          <%= f.number_field :price %>円
        </div>
        <div class="form-group">
          <%= f.label :販売ステータス %>
          <%= f.radio_button :is_sold_out, :false, checked: true %>
          <%= f.label :status_false, "販売中" %>
          <%= f.radio_button :is_sold_out, :true %>
          <%= f.label :status_true, "販売停止中" %>
        </div>
  
        <div class="form-group">
          <%= f.submit '変更を保存', class: "btn btn-success btn-sm" %>
        </div>
      <% end %>
      
    </div>
  </div>

</div>
