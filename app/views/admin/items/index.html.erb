<h2>商品一覧</h2>

 <table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, edit_admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre %></td>
        <td> 
           <% if item.is_sold_out %>
            販売停止中
           <% elsif %>
            販売中
           <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
 </table>