<div class='container'>

  <div class="row mt-3">
    <div class="col-lg-3 offset-lg-1">
      <h4 class="m-3" style="background-color: #ccc;" align="center">商品新規登録</h4>
    </div>
  </div>

<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <div class="row">
    <div class="mx-auto">
      
    　<%= form_with model: @item, url: admin_items_path do |f| %>
    　   <table class="table table-borderless mt-3">
    　    <tr>
           <td><%= f.label :商品画像 %></td>
           <td><%= f.file_field :image, accept: "image/*" %></td>
         </tr>
       　 <tr>
           <td><%= f.label :商品名, "商品名" %></td>
           <td><%= f.text_field :name, placeholder: "商品名" %></td>
         </tr>
         <tr>
           <td><%= f.label :商品説明 %></td>
           <td><%= f.text_area :introduction, placeholder: "商品説明 " %></td>
         </tr>
         <tr>
           <td><%= f.label :ジャンル %></td>
           <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %></td>
         </tr>
         <tr>
           <td><%= f.label :税抜価格 %></td>
           <td><%= f.number_field :price, placeholder: "1000" %>円</td>
         </tr>
         <tr>
           <td><%= f.label :販売ステータス %></td>
           <td>
             <%= f.radio_button :is_sold_out, :false, checked: true %>
             <%= f.label :status_false, "販売中" %>
             <%= f.radio_button :is_sold_out, :true %>
             <%= f.label :status_true, "販売停止中" %>
         </tr>
        </table>
        
        <div class="row">
         <div class="col-md-6 mx-auto">
          <div class="mb-5 mx-auto">
            <%= f.submit "新規登録", class:'btn btn-lg btn-success' %>
          </div>
         </div>
        </div>
     
      <% end %>

    </div>
  </div>

</div>
